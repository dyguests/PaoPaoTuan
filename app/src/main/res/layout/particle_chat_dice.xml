<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/boundary_half"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/accent"
    app:cardCornerRadius="@dimen/fab_mini_size_half"
    tools:showIn="@layout/item_chat_dice_other">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_casino_white_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/fab_mini_size"
            android:padding="@dimen/boundary"
            android:textColor="@android:color/white"
            tools:text="这是内容"/>
    </LinearLayout>
</android.support.v7.widget.CardView>